<% flash.each do |name, msg| -%>
  <div class="<%= name %> alert alert-warning alert-dismissible" role="alert">
    <button type="button" class="close" data-dismiss="alert">
      <span aria-hidden="true">&times;</span>
      <span class="sr-only">Close</span>
    </button>
    <%= msg %>
  </div>
<% end -%>
